<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Message">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/headings"
                android:gravity="center_horizontal|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Messages"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
<androidx.recyclerview.widget.RecyclerView
    android:layout_below="@id/cardView"
    android:layout_width="match_parent"
    android:id="@+id/recipient_list"
    tools:listitem="@layout/recipient_list_item"
    android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/recipient_list"
        android:layout_width="match_parent"
        android:id="@+id/recipient_list2"
        tools:listitem="@layout/recipient_list_item"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/no_message_view"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/ic_no_recipient"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Yay! No recipient yet..."
            android:layout_below="@id/logo"
            android:layout_margin="2dp"
            android:gravity="center"/>
    </RelativeLayout>
</RelativeLayout>