<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:background="@drawable/white_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="12dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@color/background"
            android:backgroundTint="@color/button_color"
            app:cardCornerRadius="8dp" />

        <RelativeLayout
            android:id="@+id/text_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/cardView">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:src="#03D0E8" />

            <TextView
                android:id="@+id/two_letter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/tw_font"
                android:text="AB"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/text_logo">


            <TextView

                android:id="@+id/group_txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/tw_font"
                android:hint="Group Name"
                android:text=""
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_marginStart="10dp"
                android:id="@+id/section_holder"
                android:layout_below="@id/group_txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Section: "/>
                <TextView
                    android:maxLines="1"
                    android:layout_toEndOf="@id/teacher"
                    android:id="@+id/create_group_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/tw_font"
                    android:text="SECTION "
                    android:textSize="15sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/pending_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:textColor="@color/button_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/group_count_members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/section_holder"
                android:layout_marginStart="10dp" />

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>