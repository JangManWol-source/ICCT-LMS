<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authentication.Admin.AdminMainActivity">
<RelativeLayout
    android:id="@+id/logo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:src="@drawable/logo_blue_text"/>
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/admin_features"
        android:layout_below="@id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            android:backgroundTint="@color/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sub_headings"
                android:text="   ADMIN FEATURES"
                android:layout_margin="10dp"
                app:drawableStartCompat="@drawable/ic_features" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/admin_features"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            android:backgroundTint="@color/white"
            android:elevation="20dp"
            android:id="@+id/card_announce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="  CREATE ANNOUNCEMENT"
                app:drawableStartCompat="@drawable/ic_announcement" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            android:backgroundTint="@color/white"
            android:elevation="20dp"
            android:layout_below="@id/card_announce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="  FEATURE 2..."
                app:drawableStartCompat="@drawable/ic_announcement" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>