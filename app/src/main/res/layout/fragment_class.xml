<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Class">
<RelativeLayout
    android:id="@+id/custom_nav"
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:id="@+id/class_nav"
            app:itemActiveIndicatorStyle="@style/ThemeOverlay.Material3.NavigationView"
            style="@style/Widget.Material3.NavigationRailView.ActiveIndicator"
            android:textAlignment="center"
            app:itemTextAppearanceActive="@style/TextAppearance.Material3.TitleLarge"
            app:itemTextAppearanceInactive="@style/TextAppearance.Material3.TitleSmall"
            app:itemTextColor="@color/black"
            app:menu="@menu/classlist_nav"
            app:itemIconSize="0dp"
            android:layout_height="32dp"/>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/custom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/no_data"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No class yet"
                android:fontFamily="@font/tw_font"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/student_class_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/classes_item" />

                </RelativeLayout>
            </ScrollView>


            <androidx.recyclerview.widget.RecyclerView
                tools:listitem="@layout/group_layout"
                android:id="@+id/student_group_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>



    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/student_class_wall"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/join_btn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Actions"
        app:icon="@drawable/add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <RelativeLayout
        android:id="@+id/class_holder"
        android:layout_width="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_above="@id/join_btn"
        android:layout_alignParentEnd="true">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/join_class"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="20dp"
            app:fabSize="mini"
            app:srcCompat="@drawable/myclass" />
        <androidx.cardview.widget.CardView
            android:backgroundTint="@color/background"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/join_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="5dp"
                android:fontFamily="@font/tw_font"
                android:textColor="@color/white"
                android:id="@+id/join_class_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Join Class" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/room_holder"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/class_holder"
        android:layout_alignParentEnd="true"
        >

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/join_room"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="20dp"
            app:fabSize="normal"
            app:srcCompat="@drawable/classroom" />
        <androidx.cardview.widget.CardView
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/background"
            android:layout_toStartOf="@id/join_room"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:id="@+id/join_room_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Join Group" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>


<RelativeLayout
    android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:id="@+id/null_data"
        android:text="No class yet..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/headings"
        android:textSize="12sp"/>
    <TextView
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:id="@+id/null_data_group"
        android:text="No group yet..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/headings"
        android:textSize="12sp"/>
</RelativeLayout>


</RelativeLayout>