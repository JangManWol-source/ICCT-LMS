<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/transparent_color2"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:id="@+id/top"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="50dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_centerVertical="true"
                    android:id="@+id/date_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/date_ann"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/sub_headings"
                        android:gravity="center"
                        android:lines="2"
                        android:text="29\nAUG"
                        android:textColor="#0000FF" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/line_holder"
                    android:layout_toEndOf="@id/date_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_margin="5dp"
                        android:backgroundTint="@color/button_color"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"/>
                </RelativeLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/title_card_holder"
                    android:layout_margin="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_toEndOf="@id/line_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        app:cardCornerRadius="8dp"
                        android:elevation="8dp"
                        android:backgroundTint="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/title_holder">
                        <RelativeLayout
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/title_ann"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="@font/headings"
                                android:text="Announcement Title"
                                android:textColor="@color/black" />
                            <TextView
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:id="@+id/annID"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>
    <RelativeLayout
        android:id="@+id/desc_holder"
        android:layout_below="@id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <androidx.cardview.widget.CardView
               android:layout_margin="5dp"
               android:backgroundTint="@color/white"
               android:elevation="2dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true">

               <RelativeLayout
                   android:gravity="center_horizontal"
                   android:layout_gravity="center_horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <RelativeLayout
                       android:id="@+id/description_ann_holder"
                       android:layout_centerHorizontal="false"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">

                       <TextView
                           android:textIsSelectable="true"
                           android:id="@+id/description_ann"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="start"
                           android:layout_marginStart="50dp"
                           android:layout_marginEnd="50dp"
                           android:fontFamily="@font/headings"
                           android:gravity="start"
                           android:text="DESCRIPTION"
                           android:textColor="@color/black" />
                   </RelativeLayout>

                   <RelativeLayout
                       android:layout_below="@id/description_ann_holder"
                       android:layout_margin="10dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
                       <RelativeLayout
                           android:layout_marginTop="10dp"
                           android:layout_alignParentEnd="true"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content">
                           <TextView
                               android:layout_centerVertical="true"
                               android:id="@+id/from"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="From:  "
                               android:fontFamily="@font/sub_headings"/>

                           <TextView
                               android:textColor="@color/black"
                               android:textStyle="bold"
                               android:id="@+id/announcer"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_centerVertical="true"
                               android:layout_marginEnd="20dp"
                               android:layout_toEndOf="@id/from"
                               android:text="Announcer" />
                       </RelativeLayout>
                   </RelativeLayout>
               </RelativeLayout>

           </androidx.cardview.widget.CardView>
       </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>